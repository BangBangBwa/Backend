<mapper namespace="CommentMapper">

  <insert id="save" parameterType="comment" keyProperty="id">
    INSERT INTO comments (post_id, member_id, content, created_id, created_at)
    VALUES (#{postId}, #{memberId}, #{content}, #{createdId}, #{createdAt})
  </insert>

